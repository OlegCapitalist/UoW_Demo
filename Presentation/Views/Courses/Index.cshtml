
@{
    ViewData["Title"] = "Index";
}

<h1>Course list</h1>

<!DOCTYPE html>

<p>
    <a asp-action="Create">Add</a>
</p>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>University</title>
</head>
<body>
    <div>

        <p class=MsoNormal>&nbsp;</p>

        <table class=MsoTableGrid border=1 cellspacing=0 cellpadding=0
               style='border-collapse:collapse;border:none'>
            <tr>
                <td width=217 valign=top style='width:162.8pt;border:solid windowtext 1.0pt;padding:0cm 5.4pt 0cm 5.4pt'>
                    <p class=MsoNormal style='margin-bottom:0cm;margin-bottom:.0001pt;line-height:normal'><b>NAME</b></p>
                </td>
                <td width=406 valign=top style='width:304.45pt;border:solid windowtext 1.0pt;border-left:none;padding:0cm 5.4pt 0cm 5.4pt'>
                    <p class=MsoNormal style='margin-bottom:0cm;margin-bottom:.0001pt;line-height:normal'><b>DESCRIPTION</b></p>
                </td>
            </tr>
            @foreach (var course in ViewBag.ModelList)
            {
                <tr>
                    <td width=217 valign=top style='width:162.8pt;border:solid windowtext 1.0pt;border-top:none;padding:0cm 5.4pt 0cm 5.4pt'>
                        <a asp-action="Edit" asp-route-id="@course.Id">@course.Name</a>
                    </td>
                    <td width=406 valign=top style='width:304.45pt;border-top:none;border-left:none;border-bottom:solid windowtext 1.0pt;border-right:solid windowtext 1.0pt;padding:0cm 5.4pt 0cm 5.4pt'>
                        <p class=MsoNormal style='margin-bottom:0cm;margin-bottom:.0001pt;line-height:normal'>@course.Description</p>
                    </td>
                    <td>
                        <a asp-action="ViewListByParrent" asp-route-id="@course.Id">Groups...</a> |
                        <a asp-action="Delete" asp-route-id="@course.Id">Delete</a>
                    </td>
                </tr>
            }
        </table>

        <p class=MsoNormal>&nbsp;</p>

</div>
</body>
</html>
